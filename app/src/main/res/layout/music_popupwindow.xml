<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_popupwin_music_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:gravity="center_vertical" />

    <LinearLayout
        android:id="@+id/layout_next_music"
        android:layout_width="match_parent"
        android:layout_height="@dimen/popupwindow_item_dimen"
        android:paddingEnd="0dp"
        android:paddingStart="10dp">

        <ImageView
            android:layout_width="@dimen/local_music_icon_size"
            android:layout_height="@dimen/local_music_icon_size"
            android:layout_gravity="center_vertical"
            android:src="@drawable/next_music" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:gravity="center_vertical"
            android:text="下一首播放"
            android:textColor="@android:color/black"
            android:textSize="@dimen/local_music_item_font" />

    </LinearLayout>

    <include layout="@layout/divider_line" />

    <LinearLayout
        android:id="@+id/layout_collect"
        android:layout_width="match_parent"
        android:layout_height="@dimen/popupwindow_item_dimen"
        android:paddingEnd="0dp"
        android:paddingStart="10dp">

        <ImageView
            android:layout_width="@dimen/local_music_icon_size"
            android:layout_height="@dimen/local_music_icon_size"
            android:layout_gravity="center_vertical"
            android:src="@drawable/collect" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:gravity="center_vertical"
            android:text="收藏到歌单"
            android:textColor="@android:color/black"
            android:textSize="@dimen/local_music_item_font" />

    </LinearLayout>

    <include layout="@layout/divider_line" />

    <LinearLayout
        android:id="@+id/layout_comment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/popupwindow_item_dimen"
        android:paddingEnd="0dp"
        android:paddingStart="10dp">

        <ImageView
            android:layout_width="@dimen/local_music_icon_size"
            android:layout_height="@dimen/local_music_icon_size"
            android:layout_gravity="center_vertical"
            android:src="@drawable/next_music" />

        <TextView
            android:id="@+id/tv_popupwin_comment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="@dimen/local_music_item_font" />

    </LinearLayout>

    <include layout="@layout/divider_line" />

    <LinearLayout
        android:id="@+id/layout_share"
        android:layout_width="match_parent"
        android:layout_height="@dimen/popupwindow_item_dimen"
        android:paddingEnd="0dp"
        android:paddingStart="10dp">

        <ImageView
            android:layout_width="@dimen/local_music_icon_size"
            android:layout_height="@dimen/local_music_icon_size"
            android:layout_gravity="center_vertical"
            android:src="@drawable/share" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:gravity="center_vertical"
            android:text="分享"
            android:textColor="@android:color/black"
            android:textSize="@dimen/local_music_item_font" />

    </LinearLayout>

    <include layout="@layout/divider_line" />

    <LinearLayout
        android:id="@+id/layout_singer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/popupwindow_item_dimen"
        android:paddingEnd="0dp"
        android:paddingStart="10dp">

        <ImageView
            android:layout_width="@dimen/local_music_icon_size"
            android:layout_height="@dimen/local_music_icon_size"
            android:layout_gravity="center_vertical"
            android:src="@drawable/singer" />

        <TextView
            android:id="@+id/tv_popupwin_singer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="@dimen/local_music_item_font" />

    </LinearLayout>

    <include layout="@layout/divider_line" />

    <LinearLayout
        android:id="@+id/layout_album"
        android:layout_width="match_parent"
        android:layout_height="@dimen/popupwindow_item_dimen"
        android:paddingEnd="0dp"
        android:paddingStart="10dp">

        <ImageView
            android:layout_width="@dimen/local_music_icon_size"
            android:layout_height="@dimen/local_music_icon_size"
            android:layout_gravity="center_vertical"
            android:src="@drawable/album" />

        <TextView
            android:id="@+id/tv_popupwin_album"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="@dimen/local_music_item_font" />

    </LinearLayout>

</LinearLayout>